<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Tables - SB Admin</title>
    <link href="qliuser.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Quicksand&display=swap" rel="stylesheet">

    <link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet"
        crossorigin="anonymous" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/js/all.min.js"
        crossorigin="anonymous"></script>
</head>

<body class="logo">
    <nav class="container">
        <div class="logo1">
            <a class="navbar-brand" href="#"><img src="logo-z.png" alt=""></a>
            <button class="btn btn-link btn-sm order-1 order-lg-0 ml-2"
            id="sidebarToggle" href="#"><i class="fas fa-bars"></i></button>
        </div>
        
        <!-- Navbar-->
        <div class="logo2"><a class="dropdown-item" href="logout">Logout <i class="fas fa-power-off"></i></a></div>
    </nav>



    <div id="layoutSidenav" class="content">
        <div id="layoutSidenav_nav" class="content-left">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <ul>
                            <li>
                                <a class="nav-link" href="">
                                    Doanh Thu
                                </a>
                            </li>
                            <li>
                                <a class="nav-link " href="admin">
                                    Quản lí sản phẩm
                                </a>
                            </li>
                            <li>
                                <a class="nav-link" href="quanlytaikhoan">
                                    Quản lí người dùng
                                </a>
                            </li>
                            
                            <li>
                                <a class="nav-link" href="quanlydonhang">
                                    Quản lí đơn hàng
                                </a>
                            </li>
                            <li>
                                <a class="nav-link" href="quanlykho">
                                    Quản lí kho
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small">Logged in as: Admin</div> 
                </div>
            </nav>
        </div>


        <div id="layoutSidenav_content" class="content-right">
            <div class="product">
                <div class="title-btn">
                    <div class="title">Quản lý Người dùng</div>
                    <div class="btn-primary">
                        <button class="btn" data-toggle="modal" data-target="#exampleModal">
                            <i class=" fas fa-plus mr-2"></i>Create
                        </button>
                    </div>
                </div>

                
                <table class="table ">
                    <thead class="thead-light text-center">
                        <tr>
                            <th>username</th>
                            <th>password</th>

                            <th>name</th>
                            <th>Sđt</th>
                            <th>email</th>
                            <th>address</th>
                            <th>role</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody class="text-center" id="user-admin">
                        <% for(var i=0;i<result.length;i++){%>
                            <tr>
                                <th><%=result[i].tai_khoan %></th>
                                <th><%=result[i].mat_khau %></th>

                                <th><%=result[i].ten_khachhang %></th>
                                <th><%=result[i].so_dienthoai %></th>
                                <th><%=result[i].email %></th>
                                <th><%=result[i].dia_chi %></th>
                                <th><%=result[i].loai_taikhoan %></th>

                                <td><button onclick="getvalueUpdate('<%=result[i].tai_khoan %>','<%=result[i].mat_khau %>','<%=result[i].ten_khachhang %>','<%=result[i].so_dienthoai %>','<%=result[i].email %>','<%=result[i].dia_chi %>','<%=result[i].loai_taikhoan %>')" 
                                    class="btn btn-outline-danger"  data-toggle="modal" data-target="#updateProduct"><i class="fas fa-cogs"></i></button>
                                    <button onclick="deleteAcc('<%=result[i].tai_khoan %>')" class="btn ml-1 btn-outline-warning"><i class="fas fa-trash"></i></button>
                                </td>

                            </tr>



                            <% }%>
                    </tbody>

                </table>

            </div>
        </div>
        <!-- Button trigger modal -->


        <!-- Modal -->
        
        
    </div>  
    
    <div class="content-add">
        <div class="modal fade left" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Thêm người dùng</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form action="" class="form-row">
                            <div class="col-12 mt-3">
                                <label for="">Name</label>
                                <input class="form-control" type="text" id="name" placeholder="name">
                            </div>
                            <div class="col-6 mt-3">
                                <label for="">Username</label>
                                <input class="form-control" type="text" id="username" placeholder="username">
                            </div>
                            <div class="col-6 mt-3">
                                <label for="">password</label>
                                <input class="form-control" type="password" id="password" placeholder="password">
                            </div>
                            <div class="col-6 mt-3">
                                <label for="">Số điện thoại</label>
                                <input class="form-control" type="text" id="sdt" placeholder="phone number">
                            </div>
                            <div class="col-6 mt-3">
                                <label for="">Email</label>
                                <input class="form-control" type="text" id="email" placeholder="email">
                            </div>
                            <div class="col-8 mt-3">
                                <label for="">Địa chỉ</label>
                                <input class="form-control" type="text" id="address" placeholder="address">
                            </div>
                            <div class="col-4 mt-3">
                                <label for="">Role</label>
                                <input class="form-control" type="text" id="role" placeholder="role">
                            </div>
                        </form>
                        <a class="btn btn-outline-danger mt-3" style="text-decoration: none; margin-left: 10px;" href="" onclick="addAcc()">Thêm</a>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Exit</button>
                        <!-- <button type="button" class="btn btn-primary">Save changes</button> -->
                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade right" id="updateProduct" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Cập nhật</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form class="form-row">
                        <div class="col-6 mt-3">
                            <label for="">Username</label>
                            <input class="form-control" type="text" id="username1" placeholder="username" readonly>
                        </div>
                        <div class="col-6 mt-3">
                            <label for="">Name</label>
                            <input class="form-control" type="text" id="name1" placeholder="name">
                        </div>
                        <div class="col-6 mt-3">
                            <label for="">Password</label>
                            <input class="form-control" type="text" id="password1" placeholder="password">
                        </div>
                        <div class="col-6 mt-3">
                            <label for="">Số điện thoại</label>
                            <input class="form-control" type="text" id="sdt1" placeholder="phone number">
                        </div>
                        <div class="col-6 mt-3">
                            <label for="">Email</label>
                            <input class="form-control" type="text" id="email1" placeholder="email">
                        </div>
                        <div class="col-8 mt-3">
                            <label for="">Địa chỉ</label>
                            <input class="form-control" type="text" id="address1" placeholder="adress">
                        </div>
                        <div class="col-4 mt-3">
                            <label for="">Role</label>
                            <input class="form-control" type="text" id="role1" placeholder="role" >
                        </div>
                        <a id="Update" class="btn btn-outline-danger mt-3" onclick="submitUpdateAcc()">Cập nhật</a>
                    </form>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <!-- <button type="button" class="btn btn-primary">Save changes</button> -->
                </div>
            </div>
        </div>
        </div>
    </div>
</body>
